@page
@model BookReviewWeb.Pages.Admin.GenresModel
@{
    ViewData["Title"] = "Manage Genres";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Manage Genres</h1>
        <a asp-page="./CreateGenre" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i> Add New Genre
        </a>
    </div>

    @if (Model.SuccessMessage != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i> @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h5 class="mb-0">Genres</h5>
                    <p class="text-muted small mb-0">Manage book categories</p>
                </div>
                <div class="col-md-4">
                    <form method="get" class="d-flex">
                        <input type="text" name="SearchTerm" value="@Model.SearchTerm" 
                               class="form-control me-2" placeholder="Search genres...">
                        <button type="submit" class="btn btn-outline-primary">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            @if (!Model.Genres.Any())
            {
                <div class="alert alert-info m-3">
                    <i class="fas fa-info-circle me-2"></i> No genres found matching your criteria.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Genre Name</th>
                                <th>Books</th>
                                <th style="width: 150px;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var genre in Model.Genres)
                            {
                                <tr>
                                    <td>@genre.GenreName</td>
                                    <td>@genre.Books.Count</td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-page="./EditGenre" asp-route-id="@genre.GenreId" class="btn btn-outline-primary">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-page="./DeleteGenre" asp-route-id="@genre.GenreId" class="btn btn-outline-danger">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (Model.TotalPages > 1)
                {
                    var queryParams = $"SearchTerm={Uri.EscapeDataString(Model.SearchTerm ?? "")}";
                    
                    <div class="pagination-container p-3">
                        <nav aria-label="Page navigation">
                            <ul class="pagination justify-content-center mb-0">
                                <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : "")">
                                    <a class="page-link" href="?PageNumber=@(Model.PageNumber - 1)&@queryParams">Previous</a>
                                </li>
                                @for (int i = 1; i <= Model.TotalPages; i++)
                                {
                                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                        <a class="page-link" href="?PageNumber=@i&@queryParams">@i</a>
                                    </li>
                                }
                                <li class="page-item @(Model.PageNumber >= Model.TotalPages ? "disabled" : "")">
                                    <a class="page-link" href="?PageNumber=@(Model.PageNumber + 1)&@queryParams">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                }
            }
        </div>
    </div>
</div> 