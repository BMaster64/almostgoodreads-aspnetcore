@page
@model BookReviewWeb.Pages.Auth.AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
}

<div class="container">
    <div class="text-center mt-5">
        <h1 class="text-danger">Access Denied</h1>
        <p class="lead">You do not have permission to access this resource.</p>
        <div class="mt-4">
            <i class="fas fa-exclamation-triangle fa-5x text-warning mb-4"></i>
            <p>Please <a asp-page="/Auth/Login">login</a> with an account that has access or return to the <a asp-page="/Index">home page</a>.</p>
        </div>
    </div>
</div> 