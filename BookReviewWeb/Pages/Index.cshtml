@page
@model BookReviewWeb.Pages.IndexModel
@{
    ViewData["Title"] = "Welcome to Almost Good Reads";
}

<link rel="stylesheet" href="~/css/bookstyle.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

<div class="container">
    <partial name="BookListPage/_PageHeader" />

    <div class="row">
        <!-- Latest Books Column -->
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">Latest Books</h3>
                    <a asp-page="/Library/Index" class="btn btn-sm btn-light">View All</a>
                </div>
                <div class="card-body p-0">
                    @if (!Model.LatestBooks.Any())
                    {
                        <div class="text-center p-4">
                            <p class="text-muted">No books found</p>
                        </div>
                    }
                    else
                    {
                        <div class="latest-books">
                            @foreach (var book in Model.LatestBooks)
                            {
                                <div class="latest-book-item p-3 border-bottom">
                                    <div class="d-flex">
                                        <div class="me-3 book-thumbnail-container">
                                            @if (!string.IsNullOrEmpty(book.CoverImageUrl))
                                            {
                                                <a asp-page="/Library/Details" asp-route-id="@book.Id"><img src="@book.CoverImageUrl" class="book-thumbnail" alt="@book.Title cover"></a>
                                            }
                                            else
                                            {
                                                <div class="placeholder-thumbnail">
                                                    <i class="bi bi-book fs-3"></i>
                                                </div>
                                            }
                                        </div>
                                        <div class="book-info">
                                            <a asp-page="/Library/Details" asp-route-id="@book.Id" class="text-decoration-none">
                                                <h5 class="mb-1">@book.Title</h5>
                                            </a>
                                            <p class="text-muted mb-1">by @book.Author</p>
                                            
                                            <!-- Add Rating Display -->
                                            <partial name="BookListPage/_BookRating" model="@book" />
                                            
                                            <p class="small mb-0">
                                                <span class="badge bg-secondary">@(book.Genre?.GenreName ?? "Uncategorized")</span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Latest Reviews Column -->
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">Latest Reviews</h3>
                    <a asp-page="/Reviews/Index" class="btn btn-sm btn-light">View All</a>
                </div>
                <div class="card-body p-0">
                    @if (!Model.LatestReviews.Any())
                    {
                        <div class="text-center p-4">
                            <p class="text-muted">No reviews found</p>
                        </div>
                    }
                    else
                    {
                        <div class="latest-reviews">
                            @foreach (var review in Model.LatestReviews)
                            {
                                <a asp-page="/Library/Details" asp-route-id="@review.BookId" class="text-decoration-none review-link">
                                    <div class="review-item p-3 border-bottom">
                                        <div class="row">
                                            <div class="col-md-3 col-sm-4 mb-3 mb-sm-0">
                                                <div class="book-cover-container text-center">
                                                    @if (!string.IsNullOrEmpty(review.Book.CoverImageUrl))
                                                    {
                                                        <img src="@review.Book.CoverImageUrl" class="img-fluid rounded book-cover-small" alt="@review.Book.Title">
                                                    }
                                                    else
                                                    {
                                                        <div class="placeholder-cover-small d-flex justify-content-center align-items-center bg-light rounded">
                                                            <i class="bi bi-book fs-3"></i>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                            <div class="col-md-9 col-sm-8">
                                                <div class="d-flex justify-content-between align-items-center mb-2">
                                                    <div>
                                                        <h5 class="mb-0">@review.User.UserName</h5>
                                                        <small class="text-muted">
                                                            <i class="bi bi-book-fill me-1"></i>
                                                            @review.Book.Title by @review.Book.Author
                                                        </small>
                                                    </div>
                                                    <small class="text-muted">@review.CreatedAt.ToString("MMM dd, yyyy")</small>
                                                </div>

                                                <div class="rating mb-2">
                                                    @for (int i = 1; i <= 5; i++)
                                                    {
                                                        <i class="fas @(i <= (review.Rating ?? 0) ? "fa-star text-warning" : "fa-star text-secondary")"></i>
                                                    }
                                                    <span class="ms-2 fw-bold">@(review.Rating ?? 0)/5</span>
                                                </div>

                                                <p class="review-text mb-0">@(review.Comment.Length > 150 ? review.Comment.Substring(0, 150) + "..." : review.Comment)</p>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .book-thumbnail {
        width: 70px;
        height: 100px;
        object-fit: cover;
    }

    .placeholder-thumbnail {
        width: 70px;
        height: 100px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8f9fa;
        color: #6c757d;
        border-radius: 0.25rem;
    }

    .latest-book-item:hover {
        background-color: #f8f9fa;
    }

    .book-cover-small {
        max-height: 120px;
        width: auto;
        object-fit: contain;
    }

    .placeholder-cover-small {
        height: 120px;
        width: 100%;
        color: #6c757d;
    }

    .rating .fas {
        margin-right: 2px;
    }

    .review-item {
        transition: transform 0.2s;
    }

    .review-link:hover .review-item {
        background-color: #f8f9fa;
    }

    .latest-book-item:last-child,
    .review-item:last-child {
        border-bottom: none !important;
    }
    .book-cover-container {
        height: 120px;
    }
</style>