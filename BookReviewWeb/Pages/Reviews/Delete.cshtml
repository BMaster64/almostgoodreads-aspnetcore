@page
@model BookReviewWeb.Pages.Reviews.DeleteModel
@{
    ViewData["Title"] = "Delete Review";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h2 class="mb-0">Delete Review</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        Are you sure you want to delete this review? This action cannot be undone.
                    </div>

                    <div class="mb-4">
                        <h3>@Model.Review.Book.Title</h3>
                        <p class="text-muted">by @Model.Review.Book.Author</p>
                    </div>
                    
                    <div class="card mb-4">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h5 class="mb-0">@Model.Review.User.UserName</h5>
                                <small class="text-muted">@Model.Review.CreatedAt.ToString("MMM dd, yyyy")</small>
                            </div>
                            
                            <div class="rating mb-2">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="bi @(i <= (Model.Review.Rating ?? 0) ? "bi-star-fill text-warning" : "bi-star text-muted")"></i>
                                }
                            </div>
                            
                            <p class="review-text">@Model.Review.Comment</p>
                        </div>
                    </div>
                    
                    <form method="post">
                        <input type="hidden" asp-for="Review.Id" />
                        
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-page="/Library/Details" asp-route-id="@Model.Review.BookId" class="btn btn-outline-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 