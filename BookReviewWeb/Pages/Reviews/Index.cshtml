@page
@model BookReviewWeb.Pages.Reviews.IndexModel
@{
    ViewData["Title"] = "All Reviews";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

<div class="container">
    <h1 class="mb-4">Reviews</h1>
    
    <div class="row mb-4">
        <div class="col-md-6">
            <form method="get" class="d-flex">
                <select asp-for="SortOrder" class="form-select me-2" onchange="this.form.submit()">
                    <option value="newest">Newest First</option>
                    <option value="oldest">Oldest First</option>
                    <option value="highest">Highest Rating</option>
                    <option value="lowest">Lowest Rating</option>
                </select>
                <button type="submit" class="btn btn-outline-primary">Sort</button>
            </form>
        </div>
    </div>

    @if (!Model.Reviews.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i> No reviews found.
        </div>
    }
    else
    {
        <div class="review-list">
            @foreach (var review in Model.Reviews)
            {
                <a asp-page="/Library/Details" asp-route-id="@review.BookId" class="text-decoration-none review-card-link">
                    <div class="review-item card mb-3 shadow-sm">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-2 col-sm-3 mb-3 mb-sm-0">
                                    <div class="book-cover-container text-center">
                                        @if (!string.IsNullOrEmpty(review.Book.CoverImageUrl))
                                        {
                                            <img src="@review.Book.CoverImageUrl" class="img-fluid rounded book-cover-small" alt="@review.Book.Title">
                                        }
                                        else
                                        {
                                            <div class="placeholder-cover-small d-flex justify-content-center align-items-center bg-light rounded">
                                                <i class="bi bi-book fs-3"></i>
                                            </div>
                                        }
                                    </div>
                                </div>
                                <div class="col-md-10 col-sm-9">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <div>
                                            <h5 class="mb-0">@review.User.UserName</h5>
                                            <small class="text-muted">
                                                <i class="bi bi-book-fill me-1"></i>
                                                @review.Book.Title by @review.Book.Author
                                            </small>
                                        </div>
                                        <small class="text-muted">@review.CreatedAt.ToString("MMM dd, yyyy")</small>
                                    </div>
                                    
                                    <div class="rating mb-2">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <i class="fas @(i <= review.Rating ? "fa-star text-warning" : "fa-star text-secondary")"></i>
                                        }
                                        <span class="ms-2 fw-bold">@review.Rating/5</span>
                                    </div>
                                    
                                    <p class="review-text mb-0">@(review.Comment.Length > 250 ? review.Comment.Substring(0, 250) + "..." : review.Comment)</p>
                                    
                                    <div class="d-flex justify-content-between align-items-center mt-3">
                                        <div class="text-muted small">
                                            <i class="bi bi-pencil-fill me-1"></i> 
                                            @Model.UserReviewCounts[review.UserId] review@(Model.UserReviewCounts[review.UserId] != 1 ? "s" : "")
                                        </div>
                                        
                                        @if (User.Identity.IsAuthenticated && 
                                            (int.Parse(User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier).Value) == review.UserId || 
                                             User.IsInRole("Admin")))
                                        {
                                            <div class="review-actions" onclick="event.stopPropagation();">
                                                <a asp-page="/Reviews/Edit" asp-route-id="@review.Id" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-pencil"></i> Edit
                                                </a>
                                                <a asp-page="/Reviews/Delete" asp-route-id="@review.Id" class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-trash"></i> Delete
                                                </a>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            }
        </div>
        
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Page navigation" class="mt-4">
                <ul class="pagination justify-content-center">
                    @if (Model.PageNumber > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-page="/Reviews/Index" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-sortOrder="@Model.SortOrder">Previous</a>
                        </li>
                    }
                    
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-page="/Reviews/Index" asp-route-pageNumber="@i" asp-route-sortOrder="@Model.SortOrder">@i</a>
                        </li>
                    }
                    
                    @if (Model.PageNumber < Model.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-page="/Reviews/Index" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-sortOrder="@Model.SortOrder">Next</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
</div>

<style>
    .review-item {
        transition: transform 0.2s;
        color: inherit;
    }
    
    .review-card-link:hover {
        text-decoration: none;
    }
    
    .review-card-link:hover .review-item {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
    
    .review-text {
        min-height: 50px;
    }
    
    .rating {
        font-size: 1.2rem;
    }
    
    .rating .fas {
        margin-right: 2px;
    }
    
    .book-cover-small {
        max-height: 120px;
        width: auto;
        object-fit: contain;
    }
    
    .placeholder-cover-small {
        height: 120px;
        width: 100%;
        color: #6c757d;
    }
    
    .review-actions a {
        position: relative;
        z-index: 10;
    }
</style> 