@page
@model BookReviewWeb.Pages.Reviews.IndexModel
@{
    ViewData["Title"] = "All Reviews";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">

<div class="container">
    <h1 class="mb-4">Reviews</h1>
    
    <div class="row mb-4">
        <div class="col-md-6">
            <form method="get" class="d-flex">
                <select asp-for="SortOrder" class="form-select me-2" onchange="this.form.submit()">
                    <option value="newest">Newest First</option>
                    <option value="oldest">Oldest First</option>
                    <option value="highest">Highest Rating</option>
                    <option value="lowest">Lowest Rating</option>
                    <option value="most_votes">Most Votes</option>
                    <option value="most_upvotes">Most Upvotes</option>
                    <option value="most_downvotes">Most Downvotes</option>
                </select>
                <button type="submit" class="btn btn-outline-primary">Sort</button>
            </form>
        </div>
    </div>

    @if (!Model.Reviews.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle me-2"></i> No reviews found.
        </div>
    }
    else
    {
        <div class="review-list">
            @foreach (var review in Model.Reviews)
            {
                ViewData["UserReviewCount"] = Model.UserReviewCounts[review.UserId];
                ViewData["ReviewVotes"] = Model.ReviewVoteCounts[review.Id];
                <partial name="_ReviewCardLink" model="review" />
            }
        </div>
        
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="Page navigation" class="mt-4">
                <ul class="pagination justify-content-center">
                    @if (Model.PageNumber > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-page="/Reviews/Index" asp-route-pageNumber="@(Model.PageNumber - 1)" asp-route-sortOrder="@Model.SortOrder">Previous</a>
                        </li>
                    }
                    
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-page="/Reviews/Index" asp-route-pageNumber="@i" asp-route-sortOrder="@Model.SortOrder">@i</a>
                        </li>
                    }
                    
                    @if (Model.PageNumber < Model.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" asp-page="/Reviews/Index" asp-route-pageNumber="@(Model.PageNumber + 1)" asp-route-sortOrder="@Model.SortOrder">Next</a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
</div>

<style>
    .review-item {
        transition: transform 0.2s;
        color: inherit;
    }
    
    .review-card-link:hover {
        text-decoration: none;
    }
    
    .review-card-link:hover .review-item {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
    
    .review-text-truncated {
        display: -webkit-box;
        -webkit-line-clamp: 5;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        min-height: 50px;
    }
    
    .rating {
        font-size: 1.2rem;
    }
    
    .rating .fas {
        margin-right: 2px;
    }
    
    .book-cover-small {
        max-height: 120px;
        width: auto;
        object-fit: contain;
    }
    
    .placeholder-cover-small {
        height: 120px;
        width: 100%;
        color: #6c757d;
    }
    
    .review-actions a {
        position: relative;
        z-index: 10;
    }
</style>

@section Scripts {
    <script>
        // Immediate fix for review cards in this page
        document.addEventListener('DOMContentLoaded', function() {
            // This is a specific fix for the reviews page
            var reviewList = document.querySelector('.review-list');
            if (reviewList) {
                // Check all immediate children of the review list
                for (var i = 0; i < reviewList.children.length; i++) {
                    var child = reviewList.children[i];
                    
                    // Check if this is a div with review-item class (incorrect structure)
                    if (child.tagName === 'DIV' && child.classList.contains('review-item')) {
                        // Find the nested a tag
                        var nestedAnchor = child.querySelector('a.review-card-link');
                        if (nestedAnchor) {
                            var href = nestedAnchor.getAttribute('href');
                            
                            // Create proper wrapper
                            var wrapper = document.createElement('a');
                            wrapper.href = href;
                            wrapper.className = 'text-decoration-none review-card-link d-block';
                            
                            // Replace the div with proper structure
                            reviewList.insertBefore(wrapper, child);
                            wrapper.appendChild(child);
                            
                            // Remove all nested anchors
                            var allNestedAnchors = child.querySelectorAll('a.review-card-link');
                            allNestedAnchors.forEach(function(anchor) {
                                // If it has children, move them out
                                while (anchor.firstChild) {
                                    anchor.parentNode.insertBefore(anchor.firstChild, anchor);
                                }
                                // Remove the empty anchor
                                anchor.parentNode.removeChild(anchor);
                            });
                        }
                    }
                }
            }
        });
    </script>
} 