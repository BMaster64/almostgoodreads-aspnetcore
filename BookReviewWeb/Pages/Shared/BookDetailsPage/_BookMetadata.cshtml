@model BookReviewWeb.Models.Book
<div class="book-metadata mb-4">
    <div class="row">
        <div class="col-md-6 mb-3">
            <h6 class="text-muted">Publication Year</h6>
            <p>@(Model.PublishYear?.ToString() ?? "Unknown")</p>
        </div>
        <div class="col-md-6 mb-3">
            <h6 class="text-muted">Genres</h6>
            <p>
                @if (Model.Genres != null && Model.Genres.Any())
                {
                    @string.Join(", ", Model.Genres.Select(g => g.GenreName))
                }
                else
                {
                    <span>Uncategorized</span>
                }
            </p>
        </div>
    </div>
</div>
