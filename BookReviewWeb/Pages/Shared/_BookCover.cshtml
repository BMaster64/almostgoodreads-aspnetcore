@model BookReviewWeb.Models.Book

@if (!string.IsNullOrEmpty(Model.CoverImageUrl))
{
    <img src="@Model.CoverImageUrl"
         class="img-fluid book-cover rounded-start"
         alt="@Model.Title cover" />
}
else
{
    <div class="placeholder-cover">
        <h3>@Model.Title</h3>
        <p class="text-muted">by @Model.Author</p>
    </div>
}