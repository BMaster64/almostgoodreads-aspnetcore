@model BookReviewWeb.Pages.Library.DetailsModel

<h5 class="card-title mb-3">Reviews</h5>

@if (Model.HasReviews)
{
    <div class="mb-3">
        <div class="d-flex align-items-center mb-2">
            <div class="ratings me-2">
                @for (int i = 1; i <= 5; i++)
                {
                    if (i <= Model.AverageRating)
                    {
                        <i class="bi bi-star-fill text-warning"></i>
                    }
                    else if (i - 0.5 <= Model.AverageRating)
                    {
                        <i class="bi bi-star-half text-warning"></i>
                    }
                    else
                    {
                        <i class="bi bi-star text-warning"></i>
                    }
                }
            </div>
            <span class="text-muted ms-1">(@Model.ReviewCount reviews)</span>
        </div>

        <a href="#reviews" class="btn btn-sm btn-outline-primary">
            Read Reviews
        </a>
    </div>
}
else
{
    <p class="text-muted">No reviews yet.</p>
    <a href="#" class="btn btn-sm btn-outline-primary">
        Be the first to review
    </a>
}
